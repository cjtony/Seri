<!-- Modal Editar Fechas - Periodos-->
<div class="modal fade" id="modalEditarFechaPeriodo" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Editar <span class="text-danger h5">Fecha - Periodo</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmAddFechasPeriodos" method="post" class="row was-validated">
                    <div class="form-group col-md-4">
                        <label>Año</label>
                        <input class="form-control form-control-sm" disabled type="number" id="editano" name="editano" min="" required />
                    </div>
                    <div class="form-group col-md-4">
                        <label>Periodo</label>
                        <input class="form-control form-control-sm" type="text" name="editperiodo" id="editperiodo" value="" placeholder="No. Periodo" required />
                    </div>
                    <div class="form-group col-md-4">
                        <label>Inicio</label>
                        <input class="form-control form-control-sm" type="date" name="editfinicio" id="editfinicio" value="" required />
                    </div>
                    <div class="form-group col-md-4">
                        <label>Final</label>
                        <input class="form-control form-control-sm" type="date" name="editffinal" id="editffinal" value="" required />
                    </div>
                    <div class="form-group col-md-4">
                        <label>Proceso</label>
                        <input class="form-control form-control-sm" type="date" name="editfproceso" id="editfproceso" value="" required />
                    </div>
                    <div class="form-group col-md-4">
                        <label>Pago</label>
                        <input class="form-control form-control-sm" type="date" name="editfpago" id="editfpago" value="" required />
                    </div>
                    <div class="form-group col-md-4">
                        <label>Dias Pago</label>
                        <input class="form-control form-control-sm" type="text" name="editdiaspago" id="editdiaspago" value="" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button id="btnUpdatefechaperiodo" type="button" class="btn btn-success"><i class="fas fa-save"></i> Actualizar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Agregar Fechas - Periodos-->
