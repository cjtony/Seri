<body class="bdefault">
    <div class="container bg-white">
        <div class="text-center">
            <h5 class="col-ico">
                <b>
                    Renglones
                </b>
            </h5>
            <hr />
        </div>
        <center>
            <div id="dTabCrenglones" style="margin-top:5%"> </div>
            <div style="visibility: hidden;" id="dialog">
                <div>Edit Dialog</div>
                <div style="overflow: hidden;">
                    <table style="table-layout: fixed; border-style: none;">
                        <tr>
                            <td align="right">
                                Order ID:

                            </td>
                            <td align="left">

                                <input id="orderID" type="text" disabled="disabled" />

                            </td>

                        </tr>

                        <tr>

                            <td colspan="2" align="right">

                                <br />

                                <button id="save">Save</button> <button style="margin-left: 5px;" id="cancel">Cancel</button>
                            </td>

                        </tr>
                    </table>
                </div>
            </div>
        </center>
        <div style="margin-left:80%;margin-top:25px">
            <button type="submit" class="btn btn-primary mb-2 " id="BtNewReng" value="1"><span class="fa fa-plus-square-o mr-2"></span> Nuevo Renglón </button>
        </div>
        <div>
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaIdRenglon" class="col-sm-3 col-form-label font-labels" id="LaIdRenglon">
                            Id Renglón:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Id Renglón" maxlength="4" tvvisible="false" type="text" id="TxIdRenglon" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaNomR" class="col-sm-3 col-form-label font-labels" id="LaNomReng">
                            Nombre de Renglón:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Nombre de Renglón" tvvisible="false" type="text" id="txRenglon" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaEmpresa" class="col-sm-3 col-form-label font-labels" id="LaEmpresa">
                            Empresa:
                        </label>
                        <div class="col-sm-4">
                            <select placeholder="Empresa" tp-select="TipoPerido" class="form-control form-control-sm" id="DropEmpresa">
                                <option value="0">Selecciona</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaTipoReng" class="col-sm-3 col-form-label font-labels" id="LaTipoReng">
                            Tipo de renglón:
                        </label>
                        <div class="col-sm-4">
                            <select placeholder="Tipo de Renglón" tp-select="Tiporenglon" class="form-control form-control-sm" id="DropTipoReng">
                                <option value="0">Selecciona</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaNomi" class="col-sm-3 col-form-label font-labels" id="LaNomiReng">
                            Elemento de nomina:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Elemento de nomina" tvvisible="false" type="text" id="txNomiReng" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaReport" class="col-sm-3 col-form-label font-labels" id="LaReporte">
                            Reporte:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Reporte" tvvisible="false" type="text" id="txReporte" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaAcumu" class="col-sm-3 col-form-label font-labels" id="LaAcumu">
                            Acumulado:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Acumulado" tvvisible="false" type="text" id="txAcumu" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LalisCalculo" class="col-sm-3 col-form-label font-labels" id="LalisCalculo">
                            Lista calculo:
                        </label>
                        <div class="col-sm-4">
                            <select placeholder="Lista de calculo" tp-select="LaCalculo" class="form-control form-control-sm" id="DroplisCalculo">
                                <option value="0">Selecciona</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaCueCon" class="col-sm-3 col-form-label font-labels" id="LaCueCon">
                            Cuenta Contable:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Nombre de Renglón" tvvisible="false" type="text" id="txCueCon" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaDesp" class="col-sm-3 col-form-label font-labels" id="LaDesp">
                            Cuenta Contable:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Nombre de Renglón" tvvisible="false" type="text" id="txDesp" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaCar" class="col-sm-3 col-form-label font-labels" id="LaCargo">
                            Cargo Abono:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Nombre de Renglón" tvvisible="false" type="text" id="txCargo" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="LaIdSat" class="col-sm-3 col-form-label font-labels" id="LaidDat">
                            Empresa:
                        </label>
                        <div class="col-sm-4">
                            <select placeholder="Id Sat" tp-select="Id Sat" class="form-control form-control-sm" id="DropIdSat">
                                <option value="0">Selecciona</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <div style='float: left; width: 400px; margin-top: 10px;'>
                            <div id='ChecCancel' style='margin-left: 10px; float: left;'>
                                <label for="LaCancel" class="col-sm-3 col-form-label font-labels" id="LaCancel">
                                    Cancelado:
                                </label>
                            </div>
                            <div id='ChecEspejo' style='margin-left: 10px; float: left;'>
                                <label for="LaCancel" class="col-sm-3 col-form-label font-labels" id="LaEspejo">
                                    Es espejo:
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
