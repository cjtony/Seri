    <!-- Modal Agregar -->
    <div class="modal fade" id="modalAgregarFechaPeriodo" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Agregar <span class="text-danger h5">Fecha - Periodo</span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="frmAddFechasPeriodos" method="post" class="row">

                        <div class="form-group col-md-4">
                            <label>Año</label>
                            <input class="form-control form-control-sm" type="number" id="inano" name="inano" min="" required/>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Periodo</label>
                            <input class="form-control form-control-sm" type="text" name="inperiodo" id="inperiodo" value="" placeholder="No. Periodo" required/>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Inicio</label>
                            <input class="form-control form-control-sm" type="date" name="infinicio" id="infinicio" value="" required/>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Final</label>
                            <input class="form-control form-control-sm" type="date" name="inffinal" id="inffinal" value="" required/>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Proceso</label>
                            <input class="form-control form-control-sm" type="date" name="infproceso" id="infproceso" value="" required/>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Pago</label>
                            <input class="form-control form-control-sm" type="date" name="infpago" id="infpago" value="" required/>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Dias Pago</label>
                            <input class="form-control form-control-sm" type="text" name="indiaspago" id="indiaspago" value="15" required/>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button id="btnsavefechaperiodo" type="button" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>





