<div class="container bg-white">

    @*Botones Flotantes*@
    <div>
        <button class="flotante rounded btn btn-outline-success" title="Buscar" id="btnFloBuscar" type="button" data-toggle="modal" data-target="#BRecibosNominaP" value="1">
            <i class="fas fa-search"></i>
        </button>
        <button class="flotante2 rounded btn btn-outline-danger" title="Limpiar todos los campos" id="btnFloLimpiar" type="button" btvisible="true" value="1">
            <i class="fas fa-eraser"></i>
        </button>
    </div>
   
        <div>
            <div class="text-center">
                <h5 class="col-ico">
                    <b>
                        Tibrados desde XML
                    </b>
                </h5>
                <hr />
            </div>

        </div>
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group row" style="margin-left:2%">
                        <label for="anoxml" class="col-sm-3 col-form-label font-labels">
                            Año:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Año" maxlength="4" tvvisible="false" type="text" id="anoxml" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="TipoPeriodo" class="col-sm-3 col-form-label font-labels">
                            Tipo de periodo:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Tipo de periodo" maxlength="2" tvvisible="false" type="text" id="TipoPeriodoxml" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:2%">
                        <label for="TipoPeriodo" class="col-sm-3 col-form-label font-labels">
                            Periodo:
                        </label>
                        <div class="col-sm-4">
                            <input placeholder="Periodo" maxlength="2" tvvisible="false" type="text" id="Periodoxml" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="Versionxml" class="col-sm-3 col-form-label font-labels">
                            Versión CFDI:
                        </label>
                        <div class="col-sm-4" style="margin-left:-5%">
                            <input placeholder="Versión" maxlength="2" tvvisible="false" type="text" id="version" class="form-control form-control-sm text-capitalize" />
                        </div>
                    </div>
                    <div class="form-group row col-md-8">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFileLang" lang="es">
                            <label class="custom-file-label" for="customFileLang">Seleccionar Archivo</label>
                        </div>
                    </div>
                </div>
            </div>
            <form class="md-form">
                <div class="file-field">
                    <div class="btn btn-primary btn-sm float-left">
                        <span>Choose file</span>
                        <input type="file">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload your file">
                    </div>
                </div>
            </form>
        </div>

  
</div>
