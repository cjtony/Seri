<link rel="stylesheet" href="~/Scripts/jqxGrid/jqwidgets/styles/jqx.arctic.css" type="text/css" />

<div class="container bg-white">
    @*Botones Flotantes*@

    <div class="container-fluid">

        <div class="row mt-4 border-left-primary p-3 rounded shadow border-right-primary">
            <div id="div-most-alert-data-gen" class="col-md-10 offset-2"></div>
            <div class="col-md-6">
                <div class="text-left">
                    <h6 class="col-ico font-nav-child">
                        <b>
                            <i class="fas fa-circle fa-sm mr-ico-05"></i>
                            Archivo Xml
                        </b>
                    </h6>

                </div>
                @*<div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="CheckFiniquito">
                        <label class="custom-control-label col-form-label font-labels" for="CheckFiniquito">
                            Recibo Finiquito
                        </label>
                    </div>*@
            </div>

            <div class="col-md-12">
                <hr />
            </div>

            <div class="col-md-8 offset-2">
                <div class="form-group text-center rounded shadow p-3 border-left-primary">
                    <div class="col-md-12">
                        <div class="form-group row col-md-6" style="margin-left:2%">
                            <div class="text-left">
                                <h6 class="col-ico font-nav-child">
                                    <b>
                                        <i class="far fa-file-code  mr-ico-05"></i>
                                        Xml
                                    </b>
                                </h6>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <hr />
                        </div>

                        <div class="row mt-6">
                            <div class="col-md-6">
                                <div class="form-group row" style="margin-left:2%">
                                    <label for="EmpresaNom" class="col-sm-4 col-form-label font-labels">
                                        <i class="fas fa-building mr-2 col-ico"></i>
                                        Empresa:
                                    </label>
                                    <div class="col-sm-6">
                                        <select placeholder="Empresa" tp-select="EmpresaNom" class="form-control form-control-sm" id="EmpresaNom">
                                            <option value="0">Selecciona</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row" style="margin-left:2%">
                                    <label for="anoNom" class="col-sm-4 col-form-label font-labels">
                                        <i class="fas fa-calendar mr-2 col-ico"></i>
                                        Año:
                                    </label>
                                    <div class="col-sm-6">
                                        <input placeholder="Año" maxlength="4" tvvisible="false" type="text" id="anoNom" class="form-control form-control-sm text-capitalize" />
                                    </div>
                                </div>
                                <div class="form-group row" style="margin-left:2%">
                                    <label for="TipoPerido" class="col-sm-4 col-form-label font-labels">
                                        <i class="fas fa-pallet mr-2 col-ico"></i>
                                        Tipo de Periodo:
                                    </label>
                                    <div class="col-sm-6">
                                        <select placeholder="Tipo de Periodo" tp-select="TipoPerido" class="form-control form-control-sm" id="TipodePerdioRec">
                                            <option value="0">Selecciona</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label for="peridoNom" class="col-sm-4 col-form-label font-labels">
                                        <i class="fas fa-pager mr-2 col-ico"></i>
                                        Perido:
                                    </label>
                                    <div class="col-sm-7">
                                        <select placeholder="Perido" tp-select="PeridoNom" class="form-control form-control-sm" id="PeridoNom">
                                            <option value="0">Selecciona</option>
                                        </select>
                                    </div>
                                    <label for="FechaPeriodo" class="col-sm-12 col-form-label font-labels" id="FechaPeridod"></label>
                                </div>
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="CheckXEmpleado" style="visibility:visible">
                                    <label class="custom-control-label" for="CheckXEmpleado" id="LaCheckXEmpleado" style="visibility:visible">
                                      Por empleado
                                    </label>
                                </div>

                                <div class="form-group row" id="dropbusemple" style="visibility:hidden">
                                    <label for="EmpleadoNom" class="col-sm-12 col-form-label font-labels">
                                        <i class="fas fa-users mr-2 col-ico"></i>
                                        Empleados:
                                    </label>
                                    <div class="col-sm-12">
                                        <div id='content'>
                                            <i class="fas fa-search mr-2 col-ico"></i>
                                            <input id="jqxInput" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div id="jqxLoader"></div>
                                </div>
                                <div class="form-group row">
                                    <div id="jqxLoader2"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
            </div>

     

            @*Botones de flotantes*@
            <div>

             
                <button class="flotante2 btn btn-primary btn-circle shadow" title="Limpiar todos los campos" id="btnFloLimpiar" type="button" btvisible="true" value="1">
                    <i class="fas fa-eraser"></i>
                </button>
                <button class="flotante3 btn btn-primary btn-circle shadow" title="Generar PDF masivos" id="btnPDFms" type="button" btvisible="true" value="0" style="visibility:hidden">
                    <i class="far fa-file-pdf"></i>
                </button>
                <button class="flotante3 btn btn-primary btn-circle shadow" title="Generar Xml masivos" id="btnXmlms" type="button" btvisible="true" value="1" style="visibility:visible">
                    <i class="far fa-file-code"></i>
                </button>
                <button class="flotante4 btn btn-primary btn-circle shadow" title="Dowland" id="btnDowlan" type="button" btvisible="true" value="1" style="visibility:hidden">
                    <i class="fas fa-download"></i>
                </button>


            </div>


        </div>

    </div>


</div>

