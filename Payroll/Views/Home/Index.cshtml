@{
    ViewBag.Title = "IPSNet";
    Layout = "~/Views/Shared/_LayoutIni.cshtml";
}

<br />
<br />

<div class="container mt-5">

    <div class="row">
        <div class="col-md-6 offset-3 animated fadeInDown">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h1 class="card-title text-center login-title col-ico">
                        <i class="fas fa-money-check-alt col-ico rotate-n-15"></i> IPSNet
                    </h1>
                    <hr />
                    <h6 class="text-center mt-4 font-weight-bold text-primary animated fadeInDown delay-1s">¡ Bienvenido !</h6>
                    <div class="p-4">
                        <div class="form-group row">
                            <div class="input-group mb-3 col-md-10 offset-1">
                                <div class="input-group-prepend">
                                    <span class="input-group-text " id="basic-addon1"><i class="fas fa-user col-ico"></i></span>
                                </div>
                                <input autofocus type="text" class="form-control text-uppercase" id="username" placeholder="Usuario" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="input-group mb-3 col-md-10 offset-1">
                                <div class="input-group-prepend">
                                    <span class="input-group-text " id="basic-addon1"><i class="fas fa-key col-ico"></i> </span>
                                </div>
                                <input type="password" class="form-control" id="password" placeholder="CONTRASEÑA" />
                            </div>
                        </div>
                        <div class="form-group text-center mt-3 mb-0 row">
                            <div class="col-md-10 offset-1">
                                <button type="button" class="btn col-btn-login btn-block font-button" id="btnlogin">
                                    <span class="text">Ingresar <i class="fas fa-sign-in-alt ml-ico-05"></i></span>
                                </button>
                            </div>
                        </div>
                        <div class="form-group row mt-5 d-none" id="msjvalidateinfo">
                            <div class="col-md-12 text-center">
                                <span class="badge badge-light p-2 col-ico rounded animated fadeIn btn-block font-weight-bold">
                                    Validando información, espere...
                                </span>
                            </div>
                        </div>
                        <div class="form-group row mt-5 d-none" id="msjmaysact">
                            <div class="col-md-12 text-center">
                                <span class="badge badge-light p-2 col-ico rounded animated fadeIn btn-block font-weight-bold">
                                    La tecla mayusculas esta activada
                                </span>
                            </div>
                        </div>
                        <div class="form-group text-center mt-5 mb-0" id="diverror">
                            <p class="text-danger font-size-footer" id="msgerror"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
<br /> 
<script type="text/javascript" src="~/Scripts/login.js?v=0.3" defer></script> 